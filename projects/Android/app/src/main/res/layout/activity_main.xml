<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/ic_launcher_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="390dp"
        android:layout_marginEnd="119dp"
        android:layout_marginLeft="121dp"
        android:layout_marginRight="119dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/background_dark"
        android:text="@string/textview"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:fontFamily="cursive"
        tools:text="My Aloo App"
        tools:textSize="30sp" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="143dp"
        android:layout_height="105dp"
        android:layout_marginBottom="272dp"
        android:layout_marginEnd="120dp"
        android:layout_marginLeft="121dp"
        android:layout_marginRight="120dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/alert_dark_frame"
        android:onClick="clickAloo"
        android:shadowColor="@color/colorAccent"
        android:text="@string/button"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColorHighlight="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:background="@android:drawable/alert_dark_frame"
        tools:shadowDx="10"
        tools:shadowDy="10"
        tools:shadowRadius="10"
        tools:style="@android:style/DeviceDefault.ButtonBar"
        tools:textColor="@android:color/holo_orange_light"
        tools:textSize="24sp" />
</android.support.constraint.ConstraintLayout>